//PARA CONFIGURAR EN MODO ESCLAVO EL HC05 
void setup() {
  Serial.begin(9600);       // Comunicación con el monitor serial
  Serial1.begin(38400);     // Comunicación con el HC-05 en modo AT
  Serial.println("Listo para comandos AT");
}

void loop() {
  // Enviar datos del monitor serial al HC-05
  if (Serial.available()) {
    char data = Serial.read();
    Serial1.write(data);
  }

  // Leer datos del HC-05 y mostrarlos en el monitor serial
  if (Serial1.available()) {
    char data = Serial1.read();
    Serial.write(data);
  }
}
pines de hc05 rx a rx18 de arduino 
pin tx de hc05 tx a tx19 de arduino 
gnd a gnd 
vcc a vcc 












#include <SoftwareSerial.h>

SoftwareSerial bluetooth(10, 11); // RX, TX

void setup() {
    Serial.begin(9600); // Para la comunicación Serial
    bluetooth.begin(9600); // Para el HC-05
    pinMode(2, INPUT); // Pin para el estado de emparejamiento
}

void loop() {
    if (bluetooth.available()) {
        char command = bluetooth.read();
        Serial.println(command); // Muestra el comando recibido

        // Aquí puedes agregar la lógica para controlar los servos o la mano robótica según el comando recibido
        if (command == 'A') {
            // Por ejemplo, mover la mano robótica en una dirección específica
        }
    }

    // Leer el estado del pin STATE del HC-05
    int state = digitalRead(2);
    if (state == HIGH) {
        Serial.println("HC-05 emparejado");
    } else {
        Serial.println("HC-05 no emparejado");
    }
}


#include <Servo.h>

// Configuración Wi-Fi
const char* ssid = "NOMBRE_RED";         // Nombre de la red Wi-Fi
const char* password = "CONTRASEÑA_RED";  // Contraseña de la red Wi-Fi

// Definir Servos
Servo pulgar, indice, medio, anular, meñique, palma, rotaciona; // Asegúrate de tener todos los servos definidos

// Pines de los Servos
const int pinPulgar = D1;  // D1 como ejemplo
const int pinIndice = D2;   // D2 como ejemplo
const int pinMedio = D3;    // D3 como ejemplo
const int pinAnular = D4;   // D4 como ejemplo
const int pinMeñique = D5;  // D5 como ejemplo
const int pinPalma = D6;     // D6 como ejemplo
const int pinRotaciona = D7; // D7 como ejemplo

// Servidor Wi-Fi
WiFiServer server(80);

void setup() {
  Serial.begin(115200);

  // Conectar a la red Wi-Fi
  WiFi.begin(ssid, password);
  while (WiFi.status() != WL_CONNECTED) {
    delay(500);
    Serial.print(".");
  }
  Serial.println("Conectado a Wi-Fi");
  server.begin();
  Serial.println("Servidor iniciado");

  // Inicializar Servos
  pulgar.attach(pinPulgar);
  indice.attach(pinIndice);
  medio.attach(pinMedio);
  anular.attach(pinAnular);
  meñique.attach(pinMeñique);
  palma.attach(pinPalma);
  rotaciona.attach(pinRotaciona);

  // Posición inicial
  posicionInicial();
}

void loop() {
  WiFiClient client = server.available(); // Esperar conexión de cliente
  if (client) {
    Serial.println("Cliente conectado");
    String request = client.readStringUntil('\r');
    Serial.println(request);
    client.flush();

    // Interpretar comandos
    if (request.indexOf("/raton") != -1) {
      raton();
    } else if (request.indexOf("/gato") != -1) {
      gato();
    } else if (request.indexOf("/oso") != -1) {
      oso();
    } else if (request.indexOf("/rinoceronte") != -1) {
      rinoceronte();
    } else if (request.indexOf("/denada") != -1) {
      denada();
    } else if (request.indexOf("/adios") != -1) {
      adios();
    } else if (request.indexOf("/hola") != -1) {
      hola();
    } else if (request.indexOf("/gracias") != -1) {
      gracias();
    } else if (request.indexOf("/hijo") != -1) {
      hijo();
    } else if (request.indexOf("/mama") != -1) {
      mama();
    } else if (request.indexOf("/papa") != -1) {
      papa();
    } else {
      Serial.println("Comando no reconocido");
    }
    client.stop();
  }
}

void posicionInicial() {
  // Coloca aquí la posición inicial de los servos
}

void raton(){

pulgar.write(0);
  indice.write(0); // Mueve servo2 a 180 para que gire en la misma dirección visual
  dedomedio.write(0);
  anular.write(0);
  menique.write(0);
delay(5000);
 
  for(int posicion=0; posicion<=90; posicion++){
    menique.write(posicion);
    anular.write(posicion);
    delay(30);
  }
  delay(200);
for(int posicion=0; posicion<30; posicion++){
  indice.write(posicion);
  delay(30);
}
delay(200);
for(int posicion=90; posicion>0; posicion--){
  palma.write(posicion);
  delay(30);
}
delay(5000);
 
 
for(int posicion=0; posicion<90; posicion++){
  palma.write(posicion);
  delay(30);
}
delay(200);
 
for(int posicion=90; posicion>0; posicion--){
    menique.write(posicion);
    anular.write(posicion);
    delay(30);
  }
  delay(200);
for(int posicion=30; posicion>0; posicion--){
  indice.write(posicion);
  delay(30);
}
delay(200);
 
}

void gato(){

//movimiento de gatoo
pulgar.write(0);
  indice.write(0); // Mueve servo2 a 180 para que gire en la misma dirección visual
  dedomedio.write(0);
  anular.write(0);
  menique.write(0);
  rotaciona.write(0);
 
  for(int posicion=0; posicion<90; posicion++){
  rotaciona.write(posicion);
  delay(30);
 
  }
 
   delay(3000);
 
  for (int posicion = 0; posicion <= 90; posicion++) {
    brazo1.write(posicion);
    brazo2.write(180 - posicion); // Invertir el movimiento de servo2
    delay(30);
  }
 
   delay(3000);
 
  for(int posicion=0; posicion<=90; posicion++){
    dedomedio.write(posicion);
    anular.write(posicion);
    menique.write(posicion);
    delay(30);
  }
  delay(200);
 
  for(int posicion=30; posicion>0; posicion--){
  rotaciona.write(posicion);
  delay(30);
 
  }
 
  delay(200);
 
 
  for (int posicion = 90; posicion >0; posicion--) {
    brazo1.write(posicion);
    brazo2.write(180 - posicion); // Invertir el movimiento de servo2
    delay(30);
  }
 
  delay(3000);
 
 
 for(int posicion=90; posicion>0; posicion--){
    dedomedio.write(posicion);
    anular.write(posicion);
    menique.write(posicion);
    delay(30);
  }
  delay(200);

}

